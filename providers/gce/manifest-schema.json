{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "GCE manifest",
	"type": "object",
	"properties": {
		"system": {
			"type": "object",
			"properties": {
				"bootloader": {
					"type": "string",
					"enum": ["grub", "extlinux"]
				},
				"ntpserver": {
					"type": "string"
				},
				"backported_kernel": {
					"type": "boolean"
				}

			}
		},
		"volume": {
			"type": "object",
			"properties": {
				"partitions": {
					"type": "object",
					"properties": {
						"type": { "enum": ["msdos"] }
					}
				}
			},
			"required": ["partitions"]
		}
	}
}

